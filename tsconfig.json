{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        // "moduleResolution": "node",
        "declaration": true,
        "outDir": "./lib",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "sourceRoot": "src",
        "strictNullChecks": true
    },
    "exclude": [
        "lib",
        "node_modules"
    ]
}
